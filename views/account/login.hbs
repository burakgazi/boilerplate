<div class="pb-2 mt-2 mb-4 border-bottom">
  <h3>Sign in</h3>
</div>
<form method="POST"><input type="hidden" name="_csrf" value="{{_csrf}}">
  <div class="form-group row"><label for="email"
      class="col-md-3 col-form-label font-weight-bold text-right">Email</label>
    <div class="col-md-7"><input type="email" name="email" id="email" placeholder="Email" autofocus autocomplete="email"
        required class="form-control"></div>
  </div>
  <div class="form-group row"><label for="password"
      class="col-md-3 col-form-label font-weight-bold text-right">Password</label>
    <div class="col-md-7"><input type="password" name="password" id="password" placeholder="Password"
        autocomplete="current-password" required class="form-control"></div>
  </div>
  <div class="form-group">
    <div class="offset-md-3 col-md-7 pl-2"><button type="submit" class="col-md-3 btn btn-primary"><i
          class="far fa-user fa-sm"></i>Login</button><a href="/forgot" class="btn btn-link">Forgot your password?</a>
    </div>
  </div>

</form>