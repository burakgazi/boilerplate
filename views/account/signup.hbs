<div class="pb-2 mt-2 mb-4 border-bottom">
  <h3>Sign up</h3>
</div>
<form id="signup-form" method="POST"><input type="hidden" name="_csrf" value="{{_csrf}}">
  <div class="form-group row"><label for="email"
      class="col-md-3 col-form-label font-weight-bold text-right">Email</label>
    <div class="col-md-7"><input type="email" name="email" id="email" placeholder="Email" autofocus autocomplete="email"
        required class="form-control"></div>
  </div>
  <div class="form-group row"><label for="password"
      class="col-md-3 col-form-label font-weight-bold text-right">Password</label>
    <div class="col-md-7"><input type="password" name="password" id="password" placeholder="Password"
        autocomplete="new-password" minlength="8" required class="form-control"></div>
  </div>
  <div class="form-group row"><label for="confirmPassword"
      class="col-md-3 col-form-label font-weight-bold text-right">Confirm Password</label>
    <div class="col-md-7"><input type="password" name="confirmPassword" id="confirmPassword"
        placeholder="Confirm Password" autocomplete="new-password" minlength="8" required class="form-control"></div>
  </div>
  <div class="form-group offset-sm-3 col-md-7 pl-2"><button type="submit" class="btn btn-success"><i
        class="fas fa-user-plus fa-sm"></i>Signup</button></div>
</form>