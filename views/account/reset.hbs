<div class="pb-2 mt-2 mb-4 border-bottom">
  <h3>Reset Password</h3>
</div>
<form method="POST"><input type="hidden" name="_csrf" value="{{_csrf}}">
  <div class="form-group row"><label for="password" class="col-md-3 col-form-label font-weight-bold text-right">New
      Password</label>
    <div class="col-md-7"><input type="password" name="password" id="password" placeholder="New password" autofocus
        autocomplete="new-password" minlength="8" required class="form-control"></div>
  </div>
  <div class="form-group row"><label for="confirm" class="col-md-3 col-form-label font-weight-bold text-right">Confirm
      Password</label>
    <div class="col-md-7"><input type="password" name="confirm" id="confirm" placeholder="Confirm password"
        autocomplete="new-password" minlength="8" required class="form-control"></div>
  </div>
  <div class="form-group offset-sm-3 col-md-7 pl-2"><button type="submit" class="btn btn-primary btn-reset"><i
        class="far fa-keyboard fa-sm"></i>Change Password</button></div>
</form>