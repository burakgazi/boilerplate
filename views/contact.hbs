<script src="https://www.google.com/recaptcha/api.js" async="{{''}}" defer="{{''}}"></script>
<div class="pb-2 mt-2 mb-4 border-bottom">
  <h3>{{__ "html.contact.header"}}</h3>
</div>
<form method="POST">
  <input type="hidden" name="_csrf" value="{{_csrf}}">
  {{#if unknownUser}}
  <div class="form-group row">
    <label for="name" class="col-md-2 col-form-label font-weight-bold">{{__ "html.contact.name"}}</label>
    <div class="col-md-8">
      <input type="text" name="name" id="name" autocomplete="name" autofocus required class="form-control">
    </div>
  </div>
  <div class="form-group row">
    <label for="email" class="col-md-2 col-form-label font-weight-bold">{{__ "html.contact.email"}}</label>
    <div class="col-md-8">
      <input type="email" name="email" id="email" autocomplete="email" required class="form-control">
    </div>
  </div>
  {{/if}}
  <div class="form-group row">
    <label for="message" class="col-md-2 col-form-label font-weight-bold">{{__ "html.contact.textAreaLabel"}}</label>
    <div class="col-md-8">
      <textarea name="message" id="message" rows="7" autofocus="{{unknownAuto}}" required
        class="form-control"></textarea>
    </div>
  </div>
  <div class="form-group">
    <div class="offset-md-2 col-md-8 p-1">
      <div data-sitekey="{{sitekey}}" class="g-recaptcha">

      </div><br><button type="submit" class="btn btn-primary">
        <i class="far fa-envelope fa-sm"></i>{{__ "html.contact.send"}}</button>
    </div>
  </div>
</form>
{{#section 'scripts'}}
<script src="https://www.google.com/recaptcha/api.js" async="{{''}}" defer="{{''}}"></script>
{{/section}}